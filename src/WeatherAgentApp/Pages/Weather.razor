@page "/chat"
@using System.Net.Http.Json
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Weather Agent Chat</PageTitle>

<div class="chat-container">
    <div class="chat-header">
        <div class="header-content">
            <h1>🤖 Weather Agent Assistant</h1>
            <div class="status-badge @(GetStatusClass())">
                @GetStatusText()
            </div>
        </div>
        @if (isInitialized && !string.IsNullOrEmpty(conversationId))
        {
            <div class="conversation-info">
                <small>Conversa ID: @conversationId?.Substring(0, 8)...</small>
            </div>
        }
    </div>

    <div class="chat-body">
        @if (!isInitialized)
        {
            <div class="welcome-screen">
                <div class="welcome-card">
                    <div class="welcome-icon">🌤️</div>
                    <h2>Bem-vindo ao Weather Agent</h2>
                    <p>Seu assistente inteligente para informações meteorológicas</p>
                    <button class="btn-primary" @onclick="InitializeAgent" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner"></span>
                        }
                        Iniciar Agente
                    </button>
                </div>
            </div>
        }
        else if (string.IsNullOrEmpty(conversationId))
        {
            <div class="welcome-screen">
                <div class="welcome-card">
                    <div class="success-icon">✅</div>
                    <h2>Agente Pronto!</h2>
                    <p>Vamos começar uma nova conversa?</p>
                    <button class="btn-success" @onclick="CreateConversation" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner"></span>
                        }
                        Nova Conversa
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="messages-container" @ref="messagesContainer">
                @if (messages.Count == 0)
                {
                    <div class="empty-chat">
                        <div class="empty-icon">💬</div>
                        <p>Nenhuma mensagem ainda. Comece perguntando sobre o tempo!</p>
                        <div class="suggestions-inline">
                            <button class="suggestion-chip" @onclick='() => SetAndSendMessage("Qual o tempo em Buenos Aires?")'>
                                🇦🇷 Buenos Aires
                            </button>
                            <button class="suggestion-chip" @onclick='() => SetAndSendMessage("Como está o clima em São Paulo?")'>
                                🇧🇷 São Paulo
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    @foreach (var msg in messages)
                    {
                        <div class="message @(msg.IsUser ? "user-message" : "agent-message")">
                            <div class="message-avatar">
                                @(msg.IsUser ? "👤" : "🤖")
                            </div>
                            <div class="message-content">
                                <div class="message-header">
                                    <span class="message-author">@(msg.IsUser ? "Você" : "Weather Agent")</span>
                                    <span class="message-time">@msg.Timestamp.ToString("HH:mm")</span>
                                </div>
                                <div class="message-text">@msg.Content</div>
                            </div>
                        </div>
                    }
                    
                    @if (isTyping)
                    {
                        <div class="message agent-message">
                            <div class="message-avatar">🤖</div>
                            <div class="message-content">
                                <div class="typing-indicator">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="chat-input-container">
                <button class="btn-floating" @onclick="StartNewConversation" disabled="@isLoading" title="Nova conversa">
                    ➕
                </button>
                <div class="input-wrapper">
                    <input type="text"
                           class="chat-input"
                           placeholder="Digite sua pergunta sobre o tempo..."
                           @bind="currentMessage"
                           @bind:event="oninput"
                           @onkeypress="HandleKeyPress"
                           disabled="@isLoading"/>
                    <button class="btn-send" @onclick="SendMessage" disabled="@(isLoading || string.IsNullOrWhiteSpace(currentMessage))">
                        @if (isLoading)
                        {
                            <span class="spinner-small"></span>
                        }
                        else
                        {
                            <span>📤</span>
                        }
                    </button>
                </div>
            </div>
        }
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-toast">
            <span class="error-icon">⚠️</span>
            <span class="error-text">@errorMessage</span>
            <button class="error-close" @onclick="ClearError">✕</button>
        </div>
    }
</div>

