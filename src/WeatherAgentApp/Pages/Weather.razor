</style>

@code {
    private ElementReference messagesContainer;
    private bool isInitialized = false;
    private bool isLoading = false;
    private bool isTyping = false;
    private string? conversationId;
    private string currentMessage = "";
    private string errorMessage = "";
    private List<ChatMessage> messages = new();
    private string apiBaseUrl = "https://localhost:7222";

    private string GetStatusClass()
    {
        if (!isInitialized) return "status-inactive";
        if (string.IsNullOrEmpty(conversationId)) return "status-ready";
        return "status-active";
    }

    private string GetStatusText()
    {
        if (!isInitialized) return "Inativo";
        if (string.IsNullOrEmpty(conversationId)) return "Pronto";
        return "Conversando";
    }

    private async Task InitializeAgent()
    {
        isLoading = true;
        errorMessage = "";
        
        try
        {
            var response = await Http.PostAsync($"{apiBaseUrl}/api/agent/initialize", null);
            
            if (response.IsSuccessStatusCode)
            {
                isInitialized = true;
                await Task.Delay(500);
                await CreateConversation();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? "Erro ao inicializar agente";
                AutoClearError();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro de conexão: {ex.Message}";
            AutoClearError();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateConversation()
    {
        isLoading = true;
        errorMessage = "";
        
        try
        {
            var response = await Http.PostAsync($"{apiBaseUrl}/api/conversations/create", null);
            
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<ConversationResponse>();
                conversationId = result?.ConversationId;
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? "Erro ao criar conversa";
                AutoClearError();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro de conexão: {ex.Message}";
            AutoClearError();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(currentMessage) || string.IsNullOrEmpty(conversationId))
            return;

        var userMessage = currentMessage;
        messages.Add(new ChatMessage(userMessage, true, DateTime.Now));
        currentMessage = "";
        isTyping = true;

        StateHasChanged();
        await ScrollToBottom();

        try
        {
            var response = await Http.PostAsJsonAsync(
                $"{apiBaseUrl}/api/conversations/{conversationId}/message",
                new { Message = userMessage }
            );

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<MessageResponse>();
                if (result?.Response != null)
                {
                    await Task.Delay(500);
                    messages.Add(new ChatMessage(result.Response, false, DateTime.Now));
                    await ScrollToBottom();
                }
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? "Erro ao enviar mensagem";
                AutoClearError();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro de conexão: {ex.Message}";
            AutoClearError();
        }
        finally
        {
            isTyping = false;
        }
    }

    private async Task LoadHistory()
    {
        if (string.IsNullOrEmpty(conversationId))
            return;

        isLoading = true;
        errorMessage = "";

        try
        {
            var response = await Http.GetAsync($"{apiBaseUrl}/api/conversations/{conversationId}/history");
            
            if (response.IsSuccessStatusCode)
            {
                var history = await response.Content.ReadFromJsonAsync<List<HistoryItem>>();
                // Processar histórico conforme necessário
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.Error ?? "Erro ao carregar histórico";
                AutoClearError();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro de conexão: {ex.Message}";
            AutoClearError();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ClearChat()
    {
        messages.Clear();
        currentMessage = "";
    }

    private async Task StartNewConversation()
    {
        ClearChat();
        await CreateConversation();
    }

    private void SetMessage(string message)
    {
        currentMessage = message;
    }

    private async Task SetAndSendMessage(string message)
    {
        currentMessage = message;
        await SendMessage();
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(currentMessage) && !isLoading)
        {
            await SendMessage();
        }
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await JS.InvokeVoidAsync("eval", 
                "document.querySelector('.messages-container').scrollTop = document.querySelector('.messages-container').scrollHeight");
        }
        catch { }
    }

    private void ClearError()
    {
        errorMessage = "";
    }

    private async void AutoClearError()
    {
        await Task.Delay(5000);
        errorMessage = "";
        StateHasChanged();
    }

    private record ChatMessage(string Content, bool IsUser, DateTime Timestamp);
    private record ConversationResponse(string ConversationId);
    private record MessageResponse(string Response);
    private record ErrorResponse(string Error);
    private record HistoryItem(string Id, string Content, string Role, DateTime Timestamp);
}